<Page x:Class="LookMeChatApp.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:LookMeChatApp"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
  <Page.Resources>
    <local:HorizontalAlignmentConverter x:Key="HorizontalAlignmentConverter"/>
    <local:BackgroundColorConverter x:Key="BackgroundColorConverter"/>
  </Page.Resources>

  <Grid>
    <!-- Barra Superior -->
    <Grid Background="#15072C" Height="70" VerticalAlignment="Top">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>

      <Button Grid.Column="0" Width="40" Height="40" HorizontalAlignment="Left" VerticalAlignment="Center" Content="←" Foreground="White"/>

      <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
        <Image Source="ms-appx:///Assets/Images/user.png" Width="40" Height="40"/>
        <StackPanel Orientation="Vertical" Margin="10,0,0,0">
          <TextBlock Text="Jesus Maldonado" Foreground="White" FontSize="16"/>
          <TextBlock Text="User status" Foreground="White" FontSize="12"/>
        </StackPanel>
      </StackPanel>
   </Grid>
    

    <!-- Chat -->
    <ListView x:Name="MessagesList" Margin="0,70,0,70" Background="#0E0D3A" VerticalAlignment="Stretch" ItemsSource="{x:Bind Messages}">
      <ListView.ItemTemplate>
        <DataTemplate x:DataType="local:Message">
          <StackPanel Margin="10" HorizontalAlignment="{Binding IsSentByUser, Converter={StaticResource HorizontalAlignmentConverter}}">
            <Border Background="{Binding IsSentByUser, Converter={StaticResource BackgroundColorConverter}}" 
                        CornerRadius="10" Padding="10" VerticalAlignment="Center" MaxWidth="250">
              <TextBlock Text="{x:Bind MessageContent}" Foreground="White" TextWrapping="Wrap"/>
            </Border>
          </StackPanel>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>



    <!-- Barra de entrada de mensaje -->
    <Grid Background="#0E0D3A" Height="70" VerticalAlignment="Bottom">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="Auto" />
      </Grid.ColumnDefinitions>
      
      <Grid Background="#15072C" Height="50" VerticalAlignment="Center" Grid.Column="0">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <TextBox x:Name="MessageInput" Grid.Column="0" PlaceholderText="Message" Margin="10,0,10,0" VerticalAlignment="Center" Height="40" Foreground="White" BorderBrush="Transparent" Background="Transparent"/>

        <Button Grid.Column="1" VerticalAlignment="Center" Background="Transparent">
          <Image Source="ms-appx:///Assets/Images/link.png" Width="20" Height="20" HorizontalAlignment="Center" Margin="0"/>
        </Button>
        <Button Grid.Column="2" VerticalAlignment="Center" Background="Transparent" Margin="0,0,10,0">
          <Image Source="ms-appx:///Assets/Images/camera.png" Width="20" Height="20" HorizontalAlignment="Center" Margin="0"/>
        </Button>
      </Grid>

      <Button Grid.Column="2" Click="SendMessage" VerticalAlignment="Bottom" Background="#8E24AA" HorizontalAlignment="Right" Margin="10, 10, 10, 15" Height="40" Width="40">
        <Image Source="ms-appx:///Assets/Images/send.png" Width="20" Height="20" HorizontalAlignment="Center"/>
      </Button>
    </Grid>
  </Grid>
</Page>
